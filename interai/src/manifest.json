{
  "manifest_version": 3,
  "name": "InterviewCopilot",
  "version": "1.0.0",
  "description": "Real-time AI assistant for job interviews",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "tabCapture"
  ],
  "host_permissions": [
    "https://*/*"
  ],
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://meet.google.com/*",
        "*://zoom.us/*",
        "*://*.zoom.us/*",
        "*://teams.microsoft.com/*",
        "*://*.teams.microsoft.com/*"
      ],
      "js": ["content/index.js"],
      "css": ["content/styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options/index.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["overlay/index.html", "overlay/*.js", "overlay/*.css", "assets/pdf.worker.min.mjs"],
      "matches": ["<all_urls>"]
    }
  ]
}

